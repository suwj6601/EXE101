{
  "name": "cryptotool",
  "version": "0.1.0",
  "private": true,
  "homepage": ".",
  "main": "dist/electron/main.js",
  "dependencies": {
    "@apollo/client": "^3.7.14",
    "@reduxjs/toolkit": "^1.9.5",
    "antd": "^5.4.7",
    "axios": "^1.3.5",
    "crypto-js": "^4.1.1",
    "date-fns": "^2.29.3",
    "electron-is-dev": "^2.0.0",
    "ethers": "^6.1.0",
    "fs-extra": "^11.1.1",
    "lodash": "^4.17.21",
    "log4js": "^6.9.1",
    "puppeteer": "^19.7.5",
    "react": "^18.2.0",
    "react-custom-scrollbars-2": "^4.5.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.0.5",
    "react-router-dom": "^6.11.1",
    "react-scripts": "^5.0.1",
    "reactflow": "^11.7.0",
    "redux": "^4.2.1",
    "redux-persist": "^6.0.0",
    "styled-components": "^5.3.9",
    "xlsx": "^0.18.5"
  },
  "scripts": {
    "start-web": "cross-env PORT=4000 craco start",
    "start:electron": "tsc-watch -p \"./src/electron/tsconfig.json\" --onSuccess \"electron .\"",
    "dev": "concurrently -k \"cross-env BROWSER=none npm run start-web\" \"npm run start:electron\"",
    "build-web": "cross-env NODE_ENV=production craco build",
    "build-electron": "rm -rf dist && tsc -p src/electron/tsconfig.json",
    "build": "npm run build-web ",
    "post-build": "cp -R .cache/puppeteer/chrome assets/chromium",
    "package": "electron-builder build --mac --x64 -c.extraMetadata.main=dist/electron/main.js --publish never",
    "release": "rm -rf release && npm run build && npm run package"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@craco/craco": "^7.1.0",
    "@types/crypto-js": "^4.1.1",
    "@types/lodash": "^4.14.192",
    "@types/node": "^20.1.0",
    "@types/react": "^18.2.6",
    "@types/react-dom": "^18.2.4",
    "@types/styled-components": "^5.1.26",
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "electron": "^24.2.0",
    "electron-builder": "^23.6.0",
    "electron-devtools-installer": "^3.2.0",
    "electron-reload": "^2.0.0-alpha.1",
    "tsc-watch": "^6.0.0",
    "typescript": "^5.0.4"
  },
  "build": {
    "asar": false,
    "asarUnpack": ".cache/puppeteer/chrome/**/*",
    "productName": "CryptoTool",
    "files": [
      "build/**/*",
      "dist/**/*",
      "node_modules/**/*",
      ".cache/**/*"
    ],
    "directories": {
      "buildResources": "asset",
      "output": "release"
    },
    "win": {
      "icon": "assets/favicon.png",
      "target": "nsis"
    },
    "mac": {
      "icon": "assets/favicon.png",
      "target": "dmg"
    }
  }
}
